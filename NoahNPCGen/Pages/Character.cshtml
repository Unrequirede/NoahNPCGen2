@page
@model NoahNPCGen.Pages.CharacterModel
@{
    ViewData["Title"] = "Character Page";
}


<head>
    <style>
        input.ability {
            margin: auto;
            width: 80px;
            font-size: 3em;
        }

        input.ability-modifier {
            margin: auto;
            height: 1.5em;
            width: 30px;
        }

        input.modifier {
            height: 1.5em;
            width: 30px;
            display: inline;
        }

        label.modDesc {
            font-size: 0.8em;
            height: 10px;
            line-height: 1.2em
        }
    </style>

    <script>import FCG from "fantasy-content-generator";</script>
    <script src="./fantasy_content_generator.js" type="text/javascript"></script>
</head>

<h2>Here's your character sheet. Feel free to customize it as much as you want.</h2>

<form method="POST">
    <div class="row bg-light">
        <div class="col-sm-4">
            <input class="w-100" id="NameBox" name="NameBox" value="@Model.displayName" />
            <div class="row">
                <label for="NameBox">Character Name</label>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-sm-4">
                    <div class="row">
                        <input id="ClassBox" name="ClassBox" value="@Model.displayClass @Model.displayLevel" />
                    </div>
                    <div>
                        <label for="ClassBox">Class & Level</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <input id="BackGBox" name="BackGBox" value="@Model.displayBackG" />
                    </div>
                    <div class="row">
                        <label for="BackGBox">Background</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <input id="PlayerBox" name="PlayerBox" value="" />
                    </div>
                    <div class="row">
                        <label for="PlayerBox">Player Name</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="row">
                        <input id="RaceBox" name="RaceBox" value="@Model.displayRace" />
                    </div>
                    <div class="row">
                        <label for="RaceBox">Race</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <input id="AlignmentBox" name="AlignmentBox" value="@Model.displayAlignment" />
                    </div>
                    <div class="row">
                        <label for="AlignmentBox">Alignment</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="row">
                        <input id="ExperienceBox" name="ExperienceBox" value="@Model.displayExp" />
                    </div>
                    <div class="row">
                        <label for="ExperienceBox">Experience Points</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4 bg-light">
            <div class="row">
                <div class="col-sm-6 bg-light">
                    <div class="border" id="StrSco">
                        <label for="StrSco">Strength</label>
                        <input class="form-control ability" id="StrAbl" name="StrAbl" value="@Model.displayStr" />
                        <input class="form-control ability-modifier p-1" id="StrMod" name="StrMod" value="@Model.displayStrMod" />
                    </div>
                    <div class="border" id="DexSco">
                        <label for="DexSco">Dexterity</label>
                        <input class="form-control ability" id="DexAbl" name="DexAbl" value="@Model.displayDex" />
                        <input class="form-control ability-modifier p-1" id="DexMod" name="DexMod" value="@Model.displayDexMod" />
                    </div>
                    <div class="border" id="ConSco">
                        <label for=" ConSco">Constitution</label>
                        <input class="form-control ability" id="ConAbl" name="ConAbl" value="@Model.displayCon" />
                        <input class="form-control ability-modifier p-1" id="ConMod" name="ConMod" value="@Model.displayConMod" />
                    </div>
                    <div class="border" id="IntSco">
                        <label for=" IntSco">Intelligence</label>
                        <input class="form-control ability" id="IntAbl" name="IntAbl" value="@Model.displayInt" />
                        <input class="form-control ability-modifier p-1" id="IntMod" name="IntMod" value="@Model.displayIntMod" />
                    </div>
                    <div class="border" id="WisSco">
                        <label for=" WisSco">Wisdom</label>
                        <input class="form-control ability" id="WisAbl" name="WisAbl" value="@Model.displayWis" />
                        <input class="form-control ability-modifier p-1" id="WisMod" name="WisMod" value="@Model.displayWisMod" />
                    </div>
                    <div class="border" id="ChaSco">
                        <label for="ChaSco">Charisma</label>
                        <input class="form-control ability" id="ChaAbl" name="ChaAbl" value="@Model.displayCha" />
                        <input class="form-control ability-modifier p-1" id="ChaMod" name="ChaMod" value="@Model.displayChaMod" />
                    </div>
                </div>
                <div class="col-sm-6 bg-light border">
                    <input class="form-control modifier p-1" id="ProfBonus" name="ProfBonus" value="@Model.displayProf">
                    <label class="modDesc">Proficiency Bonus</label>
                    <div class="border w-100">
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="StrSavThr" name="StrSav" type="checkbox" @Model.strSav />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="StrSaveThr" value="@Model.ProfBonus(Model.displayStrMod, "checked")" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Strength Saving Throw</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="DexSavThr" name="DexSav" type="checkbox" @Model.dexSav />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="DexSaveThr" value="@Model.ProfBonus(Model.displayDexMod, Model.dexSav)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Dexterity Saving Throw</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="ConSavThr" name="ConSav" type="checkbox" @Model.conSav />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="ConSaveThr" value="@Model.ProfBonus(Model.displayConMod, Model.conSav)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Constitution Saving Throw</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="IntSavThr" name="IntSav" type="checkbox" @Model.intSav />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="IntSaveThr" value="@Model.ProfBonus(Model.displayIntMod, Model.intSav)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Intelligence Saving Throw</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="WisSavThr" name="WisSav" type="checkbox" @Model.wisSav />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="WisSaveThr" value="@Model.ProfBonus(Model.displayWisMod, Model.wisSav)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Wisdom Saving Throw</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="ChaSavThr" name="ChaSav" type="checkbox" @Model.chaSav />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="ChaSaveThr" value="@Model.ProfBonus(Model.displayChaMod, Model.chaSav)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Charisma Saving Throw</label>
                            </div>
                        </div>
                        <p style="margin: auto;"><b>Saving Throws</b></p>
                    </div>
                    <div class="border">
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="DexAcr" name="DexAcr" type="checkbox" @Model.acroPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="DexAcroMod" value="@Model.ProfBonus(Model.displayDexMod, Model.acroPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Acrobatics</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="WisAni" name="WisAni" type="checkbox" @Model.animPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="WisAnimMod" value="@Model.ProfBonus(Model.displayWisMod, Model.animPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Animal Handling</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="IntArc" name="IntArc" type="checkbox" @Model.arcaPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="IntArcMod" value="@Model.ProfBonus(Model.displayIntMod, Model.arcaPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Arcana</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="StrAth" name="StrAth" type="checkbox" @Model.athlPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="StrAthMod" value="@Model.ProfBonus(Model.displayStrMod, Model.athlPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Athletics</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="ChaDec" name="ChaDec" type="checkbox" @Model.decePro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" id="ChaDecMod" name="ChaDecMod" value="@Model.ProfBonus(Model.displayChaMod, Model.decePro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Deception</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="IntHis" name="IntHis" type="checkbox" @Model.histPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="IntHisMod" value="@Model.ProfBonus(Model.displayIntMod, Model.histPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">History</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="WisIns" name="WisIns" type="checkbox" @Model.insiPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="WisInsMod" value="@Model.ProfBonus(Model.displayWisMod, Model.insiPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Insight</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="ChaInt" name="ChaInt" type="checkbox" @Model.intiPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="ChaIntMod" value="@Model.ProfBonus(Model.displayIntMod, Model.intiPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Intimidation</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="IntInv" name="IntInv" type="checkbox" @Model.invePro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="IntInvMod" value="@Model.ProfBonus(Model.displayIntMod, Model.invePro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Deception</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="WisMed" name="WisMed" type="checkbox" @Model.mediPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="WisMedMod" value="@Model.ProfBonus(Model.displayWisMod, Model.mediPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Medicine</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="IntNat" name="IntNat" type="checkbox" @Model.natuPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="IntNatMod" value="@Model.ProfBonus(Model.displayIntMod, Model.natuPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Nature</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="WisPer" name="WisPer" type="checkbox" @Model.percPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="WisPerMod" value="@Model.ProfBonus(Model.displayWisMod, Model.percPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Perception</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="ChaPerf" name="ChaPerf" type="checkbox" @Model.perfPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="ChaPerfMod" value="@Model.ProfBonus(Model.displayChaMod, Model.perfPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Performance</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="ChaPers" name="ChaPers" type="checkbox" @Model.persPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="ChaPersMod" value="@Model.ProfBonus(Model.displayChaMod, Model.persPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Persuasion</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="IntRel" name="IntRel" type="checkbox" @Model.reliPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="IntRelMod" value="@Model.ProfBonus(Model.displayIntMod, Model.reliPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Religion</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="DexSle" name="DexSle" type="checkbox" @Model.sleiPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="DexSleMod" value="@Model.ProfBonus(Model.displayDexMod, Model.sleiPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Sleight of Hand</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="DexSte" name="DexSte" type="checkbox" @Model.steaPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="DexSteMod" value="@Model.ProfBonus(Model.displayDexMod, Model.steaPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Stealth</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 p-0">
                                <input id="WisSur" name="WisSur" type="checkbox" @Model.survPro />
                                <input class="form-control p-1 modifier" maxlength="2" size="2" name="WisSurMod" value="@Model.ProfBonus(Model.displayWisMod, Model.survPro)" />
                            </div>
                            <div class="col-sm-8 p-0">
                                <label class="modDesc">Survival</label>
                            </div>
                        </div>
                    </div>
                    <p stlye="margin:auto;"><b>Skills</b></p>
                </div>
            </div>
            <div class="row bg-light">
                <div class="border p-3" style="margin:auto">
                    <input class="form-control p-1 modifier" maxlength="2" size="2" name="PassPerc" value="@Model.ProfBonus(Model.displayWisMod, Model.percPro, 10)" />
                    <label class="modDesc">Passive Wisdom (Perception)</label>
                </div>
                <textarea id="OtherProf" rows="4" cols="40" style="margin:auto;" name="OtherProf">@Model.otherPro</textarea>
            </div>
            <p stlye="margin:auto;"><b>Other Proficiencies and Langauges</b></p>
        </div>

        <div class="col-sm-4 bg-light">
            <div class="row">
                <div class="col-sm-4">
                    <div class="border" id="ACSco">
                        <input class="form-control ability" id="ACSco" name="ACSco" value="@Model.displayAC" />
                        <label for="ACSco">Armor Class</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="border" id="InitSco">
                        <input class="form-control ability" id="InitSco" name="InitSco" value="@Model.displayDexMod" />
                        <label for="InitSco">Initiative</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="border" id="SpeedSco">
                        <input class="form-control ability" id="SpeedSco" name="SpeedSco" value="@Model.displaySpeed ft" />
                        <label for="ACSco">Speed</label>
                    </div>
                </div>
            </div>
            <div class="border">
                <div class="row p-0 mx-auto">
                    <p>Hit point maximum:</p><input name="MaxHP" value="@Model.displayHP" />
                </div>
                <div class="row p-0 mx-auto mb-0">
                    <input class=" w-100" style="font-size: 3em;" name="CurrHP" value="@Model.displayHP" />
                </div>
                <div class="row mx-auto">
                    <p class="mb-0"><b>Current hit points</b></p>
                </div>
            </div>
            <div class="border mx-auto">
                <div class="row p-0 mx-auto mb-0">
                    <input class="w-100" style="font-size: 3em;" name="TempHP" />
                </div>
                <div class="row mx-auto">
                    <p class="mb-0"><b>Temporary hit points</b></p>
                </div>
            </div>
            <div class="row mx-auto">
                <div class="col-sm-6 border">
                    <div class="row mx-auto">
                        <p>Total: </p><input class="w-100" name="DieLevel" value="@Model.displayLevel" />
                    </div>
                    <div class="row mx-auto">
                        <p>d</p><input class="w-100" name="HitDie" value="@Model.displayHitDice" />
                    </div>
                    <div class="row mx-auto">
                        <p><b>Hit Dice</b></p>
                    </div>
                </div>
                <div class="col-sm-6 border">
                    <div>
                        <p class="d-inline">Successes</p>
                        <input id="Succ1" name="DSSucc1" type="checkbox" />
                        <input id="Succ2" name="DSSucc2" type="checkbox" />
                        <input id="Succ3" name="DSSucc3" type="checkbox" />
                    </div>
                    <div>
                        <p class="d-inline">Failures</p>
                        <input id="Fail1" name="DSFail1" type="checkbox" />
                        <input id="Fail2" name="DSFail2" type="checkbox" />
                        <input id="Fail3" name="DSFail3" type="checkbox" />
                    </div>
                    <div class="row mx-auto">
                        <p><b>Death Saves</b></p>
                    </div>
                </div>
            </div>
            <div class="row mx-auto border">
                <table class="w-100">
                    <tr>
                        <th class="border">Name</th>
                        <th class="border">ATK Bonus</th>
                        <th class="border">Damage/Type</th>
                    </tr>
                    @foreach (string[] attack in Model.attackList)
                    {
                        <tr>
                            <td class="border">@attack[0]</td>
                            <td class="border">@attack[1]</td>
                            <td class="border">@attack[2]</td>
                        </tr>
                    }
                </table>
                @if (Model.attackList.Count >= 1)
                {
                    <input type="hidden" name="Atk1Nam" value="@Model.attackList.ElementAt(0)[0]" />
                    <input type="hidden" name="Atk1Bon" value="@Model.attackList.ElementAt(0)[1]" />
                    <input type="hidden" name="Atk1Dam" value="@Model.attackList.ElementAt(0)[2]" />
                }
                @if (Model.attackList.Count >= 2)
                {
                    <input type="hidden" name="Atk2Nam" value="@Model.attackList.ElementAt(1)[0]" />
                    <input type="hidden" name="Atk2Bon" value="@Model.attackList.ElementAt(1)[1]" />
                    <input type="hidden" name="Atk2Dam" value="@Model.attackList.ElementAt(1)[2]" />
                }
                @if (Model.attackList.Count >= 3)
                {
                    Console.WriteLine(Model.attackList.ElementAt(2));
                    <input type="hidden" name="Atk3Nam" value="@Model.attackList.ElementAt(2)[0]" />
                    <input type="hidden" name="Atk3Bon" value="@Model.attackList.ElementAt(2)[1]" />
                    <input type="hidden" name="Atk3Dam" value="@Model.attackList.ElementAt(2)[2]" />
                }
                <div class="row mx-auto">
                    <p><b>Attacks & Spellcasting</b></p>
                </div>
            </div>
            <div class="mx-auto border">
                <textarea id="AllEquipment" name="AllEquipment" rows="8" class="h-auto w-100">@Model.AllItems()</textarea>
                <b class="row mx-auto">Equipment</b>
            </div>
        </div>

        <div class="col-sm-4 bg-light">
            <div class="border">
                <textarea rows="5" class="m-auto w-100" id="PersTrait" name="PersTrait">@Model.persTrait</textarea>
                <p class="mt-auto">Personality Traits</p>
                <textarea rows="3" class="m-auto w-100" id="IdealTrait" name="IdealTrait">@Model.persIdeal</textarea>
                <p class="mt-auto">Ideals</p>
                <textarea rows="3" class="h-auto w-100" id="BondTrait" name="BondTrait">@Model.persBonds</textarea>
                <p class="mt-auto">Bonds</p>
                <textarea rows="3" class="m-auto w-100" id="FlawTrait" name="FlawTrait">@Model.persFlaws</textarea>
                <p class="mt-auto">Flaws</p>
            </div>
            <div class="border">
                <div class="list-group list-group-flush">
                    @foreach (string ft in Model.featuresTraits)
                    {
                        <button type=button class="list-group-item list-group-item-action py-1">@ft</button>
                    }
                    <b>Features and Traits</b>
                </div>
            </div>
        </div>
    </div>

    <button type="submit" id="Submit">Export to PDF</button>
</form>